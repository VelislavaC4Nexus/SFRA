<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19" secure="false">
	<field
		formid="firstname"
		label="label.input.firstname.profile"
		mandatory="true"
		max-length="50"
		missing-error="error.message.required"
		range-error="error.message.50orless"
		type="string" />

	<field
		formid="lastname"
		label="label.input.lastname.profile"
		mandatory="true"
		max-length="50"
		missing-error="error.message.required"
		range-error="error.message.50orless"
		type="string" />

	<field
		formid="email"
		label="label.input.email.profile"
		mandatory="true"
		max-length="50"
		missing-error="error.message.required"
		parse-error="error.message.parse.email.profile.form"
		range-error="error.message.50orless"
		regexp="^[\w.%+-]+@[\w.-]+\.[\w]{2,6}$"
		value-error="ValueErrorText"
		type="string" />

        <field 
			formid="gender"
			label="label.input.gender.profile"
			mandatory="false"
			missing-error="error.message.required"
			type="string"> 
            <options>
				<option optionid="" 	label="" 		value=""/>
                <option optionid="f" label="select.option.gender.f" value="female"/>
                <option optionid="m" label="select.option.gender.m" value="male"/>
            </options> 
		</field> 
</form>
